<div class="wrap-{{post}}" data-ufID={{data.ufID}}> 
{% block app_title %}
  <div class="d-flex border bg-white p-2 rounded mb-4" style= "display:none!important" >
    <div class="socialmedia-title rounded">
      <img width="29" src="{{ appIconSrc }}" alt="{{ appName }}">
      <span>{{ appName}}</span>
    </div>
  </div> 
  {% endblock %}
  {% block page_id_selection %}
  {% endblock %} 
  {% block post_desc %}
  <div class="d-flex align-items-center justify-content-between {{ post }}">
    <legend>Text</legend> {% if post == 'mypost'%} <input type="text" id="post_id" name="postid" class="d-none"> {% else %} <img src="{{ appIconSrc }}" alt="{{ appName}}" width="20" height="20"> {% endif %}
    {% if appName == 'Twitter' %}
	<div class="textcount">280</div>
	{% else %}
	<div class="textcount">2000</div>
	{% endif %}
  </div>
  <textarea class="w-100" rows="4" autocomplete="off"></textarea>
  {% endblock %}
  {% block post_desc_help_desc %}
  {% endblock %}
  <div class="d-flex mt-3 mb-1">
    <legend class="col-3 p-0">Media Kit</legend>
  </div>
  {% block media_kit_wrapper %}
  <div class="bg-white p-2">
   
  </div> 
  {% endblock %}
  {% block toggle_class %}
  {% if appName == 'Facebook' %}
  <div class="d-flex mt-3 mb-1 toggle-{{post}}-toggle-gear">
    <legend>Schedule</legend>
    <div id="gear" class="slider-toggle d-flex">
      <div class="switch disable">
        <input type="checkbox" id="auto-schedule-{{post}}">
        <label class="slider" for="auto-schedule-{{post}}"></label>
      </div>
      <span class="ml-2 btnenbl btnoff">Off</span>
    </div>
    <!-- Auto Schedule settings -->
    <a href="#" class="ml-3" data-toggle="modal" data-target="#auto-Schedule-modal-{{post}}">
      <img class="gear-icon" src="/{{ module_path[0] }}/images/gear-icon.png">
    </a>
  </div>
  <p class="schedule-instruction">This post is not scheduled. Click “POST NOW” or the gear to schedule your post later.</p>
  {% else %}
  <p></p>
 {% endif %}  
  {% endblock %}

  {% block post_submission %}
  
  <div class="pt-1 {{post}}-button">
    <button id="post-now" class="btn btn-primary mr-2 social-media-config-btn disabled">POST NOW</button>
    <button id="save-draft" class="btn btn-primary mr-2 social-media-config-btn disabled">SAVE AS DRAFT</button>
    <button id="cancel" class="btn btn-primary" data-toggle="modal" data-target="#cancel-post-modal-{{post}}">CANCEL</button>
  </div> {% endblock %}
</div>