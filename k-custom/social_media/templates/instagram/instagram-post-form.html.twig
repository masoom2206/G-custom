
{% if post == 'newpost' %}
{% embed '@social_media/post-form.html.twig' ignore missing with {'post': 'newpost'} %}
   {% block page_id_selection %}
 <div class="insta-account-selection">
  <legend>Select Account</legend>
  <select class="w-100 rounded" name="account_id" id="account_id">
  {% for account_id,account_details in data.instaAccounts %}
        {% if account_id == data.instagram_kaboodle.selected_account %}
      <option value="{{account_id}}" selected>{{account_details.username}}</option>
      {% else %}
       <option value="{{account_id}}">{{account_details.username}}</option>
      {% endif %} 
  {% endfor %}
  </select>
</div>
{% endblock %} 

 {% block media_kit_wrapper %}
  <div class="bg-white p-2">
  {{data.media_kit_one}}
  </div> 
 {% endblock %}               

				
{% endembed %}
{% else %}
         {% embed '@social_media/post-form.html.twig' ignore missing with {'post': 'mypost'} %}
             {% block app_title %}
		 {% endblock %}
		   {% block page_id_selection %}
             <div class="insta-account-selection">
